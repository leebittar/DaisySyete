rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public read-only survey responses
    match /survey_responses/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Admin users: allow read if requester has an admin doc (exists check)
    // Only super_admin can write/update admin_users documents
    match /admin_users/{adminId} {
      allow read: if request.auth != null
                  && exists(/databases/$(database)/documents/admin_users/$(request.auth.uid));
      allow write: if request.auth != null
                   && get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role == 'super_admin';
    }

    // Survey questions: read public, write allowed to super_admin & survey_manager
    match /survey_questions/{docId} {
      allow read: if true;
      allow write: if request.auth != null &&
                    get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin', 'survey_manager'];
    }

    // Reports: readable by admin roles (including data_analyst and reports_viewer)
    match /reports/{docId} {
      allow read: if request.auth != null &&
                  get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin','admin','data_analyst','reports_viewer'];
      allow write: if request.auth != null &&
                   get(/databases/$(database)/documents/admin_users/$(request.auth.uid)).data.role in ['super_admin','admin'];
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
